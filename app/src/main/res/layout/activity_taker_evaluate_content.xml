<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--My Page 하단 우측 부분에 있는 (ListView) GIver의 Request history 각각의 컨텐트의 틀-->

    <LinearLayout
        android:id="@+id/totalView"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>

                <TextView
                    android:id="@+id/tvFrom"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="From"
                    android:textAlignment="center"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/to"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toEndOf="@+id/textView_1"
                    android:gravity="center"
                    android:text="TO"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDest"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_toEndOf="@+id/textView_2"
                    android:gravity="center"
                    android:text="Dest"
                    android:textAlignment="center"
                    android:textColor="@color/design_default_color_primary"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Time"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvHour"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/textView_1"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:background="@android:drawable/title_bar"
                        android:gravity="center"
                        android:inputType="time"
                        android:text="hour"
                        android:textAlignment="textEnd"
                        android:textAllCaps="false"
                        android:textColor="@android:color/black"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/connect"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="false"
                        android:layout_gravity="center"
                        android:layout_toEndOf="@+id/textView_1"
                        android:background="@android:drawable/title_bar"
                        android:gravity="center"
                        android:inputType="time"
                        android:text=":"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvMin"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:background="@android:drawable/title_bar"
                        android:gravity="center"
                        android:inputType="time"
                        android:text="Min"
                        android:textAlignment="textEnd"
                        android:textAllCaps="false"
                        android:textColor="@android:color/black"
                        android:textSize="24sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_success"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="Success!"
                android:textAlignment="center"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_make_noshow"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="No Show  :("
                android:textAlignment="center"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_late"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="Late"
                android:textAlignment="center"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>